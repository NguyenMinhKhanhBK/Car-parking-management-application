<Window
    x:Class="QuanLyBaiXe.MainWindow"
    x:Name="mainwindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
    xmlns:gauges="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:grid_maintenance="clr-namespace:QuanLyBaiXe.Resource.Grid_Maintenance"
    xmlns:local="clr-namespace:QuanLyBaiXe"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:MyResource="clr-namespace:QuanLyBaiXe.Resource.Grid_Booked"
    xmlns:MyResource1="clr-namespace:QuanLyBaiXe.Resource.Grid_Available"
    xmlns:MyResource2="clr-namespace:QuanLyBaiXe.Resource.Grid_Occupied"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    Width="1920"
    Height="1081"
    DataContext="{StaticResource MainVM}"
    mc:Ignorable="d"
    Background="#FFF0F0F0"
    Icon="Image/icon.png"
    Title="Phần mềm quản lý bãi xe"
    WindowStartupLocation="CenterScreen">

    <Window.Effect>
        <DropShadowEffect
            Color="#FFD6D6D6"
            BlurRadius="20"
            RenderingBias="Quality" />
    </Window.Effect>

    <Window.Resources>
      
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
     

        <Style x:Key="itemHeaderStyle" TargetType="Grid">
            <Setter Property="Width" Value="180" />
            <Setter Property="Height" Value="35" />
            <Setter Property="Margin" Value="5 0 0 0" />
        </Style>
    </Window.Resources>

    <!--Bắt đầu giao diện-->

    <Grid>
        <TabControl
            Margin="0"
            Name="mainTabControl"
            Background="#FF7A00E0"
            BorderThickness="1,0,1,1"
            Foreground="White"
            Padding="1">
            <!--TabControl Style-->
            <TabControl.Resources>
                <Style
                    x:Name="textblock"
                    x:Key="mainTabControlTextBlock"
                    TargetType="TextBlock">
                    <Setter Property="Foreground" Value="#FFAE00FF" />
                    <Setter Property="FontSize" Value="20" />
                    <Setter Property="Margin" Value="15 0 0 0" />
                    <Style.Triggers>
                        <DataTrigger Value="True" Binding="{Binding IsSelected,
                        RelativeSource={RelativeSource AncestorType=TabItem}}">
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
                <Style x:Key="mainTabControlPackIcon" TargetType="materialDesign:PackIcon">
                    <Setter Property="Height" Value="20" />
                    <Setter Property="Width" Value="18" />
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Foreground" Value="#FFAE00FF" />
                    <Setter Property="Margin" Value="-5 0 0 0" />
                    <Style.Triggers>
                        <DataTrigger Value="True" Binding="{Binding IsSelected,
                        RelativeSource={RelativeSource AncestorType=TabItem}}">
                            <Setter Property="Foreground" Value="White" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
                <Style x:Key="TabControlStyle" TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid Name="Panel">
                                    <Border
                                        x:Name="Border1"
                                        Margin="0,0,0,-1"
                                        BorderBrush="#FFBDBDBD"
                                        BorderThickness="0"
                                        CornerRadius="8 8 0 0">
                                        <ContentPresenter
                                            x:Name="ContentSite"
                                            Margin="10,2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            ContentSource="Header" />
                                    </Border>
                                    <Grid.Height>60</Grid.Height>
                                    <Grid.Width>200</Grid.Width>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border1" Property="Background" Value="#FF7A00E0" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Panel" Property="Background" Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabControl.BorderBrush>
                <ImageBrush />
            </TabControl.BorderBrush>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding MainTabControlSelectionChanged}" CommandParameter="{Binding ElementName=mainTabControl}" ></i:InvokeCommandAction>
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <!--MAN HINH CHINH-->
            <TabItem
                x:Name="TabControl"
                Margin="0"
                BorderBrush="Black"
                IsSelected="True"
                Style="{StaticResource TabControlStyle}"
                UseLayoutRounding="False">
                <!--Declare header name-->
                <TabItem.Header>
                    <Grid VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="HomeOutline" Style="{StaticResource mainTabControlPackIcon}" />
                        <TextBlock Style="{StaticResource mainTabControlTextBlock}" Text="Màn hình chính" />
                    </Grid>
                </TabItem.Header>
                <!--Main grid in MAN HINH CHINH-->
                <Grid>
                    <!--Divide the grid into 2 cols and 2 rows-->
                    <!--First col for the parking lot diagram-->
                    <!--The other col for the list of current customer, car counter and alarms-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.5*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <!--PARKING LOT DIAGRAM-->
                    <Border
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="0"
                        Margin="10,5,10,10"
                        Background="White"
                        BorderBrush="White"
                        BorderThickness="0"
                        CornerRadius="8">
                        <Border.Effect>
                            <DropShadowEffect
                                Color="#FFC1C1C1"
                                BlurRadius="20"
                                RenderingBias="Quality"
                                ShadowDepth="5" />
                        </Border.Effect>
                        <Grid  Grid.Row="0" Grid.Column="0">
                            <!--Name: So do bai xe-->
                            <TextBlock
                                Margin="40,10"
                                FontSize="40"
                                Foreground="#FF5D00FF"
                                Text="Sơ đồ bãi xe">
                                <!--<TextBlock.Effect>
                                    <DropShadowEffect Color="#FFC5C5C5" RenderingBias="Quality" BlurRadius="30" ShadowDepth="2"/>
                                </TextBlock.Effect>-->
                            </TextBlock>
                            <!--Divide the grid into 12 parts for each station-->
