<Window x:Class="QuanLyBaiXe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:QuanLyBaiXe"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
        xmlns:MyResource="clr-namespace:QuanLyBaiXe.Resource.Grid_Booked"
        xmlns:MyResource1="clr-namespace:QuanLyBaiXe.Resource.Grid_Available"
        xmlns:MyResource2="clr-namespace:QuanLyBaiXe.Resource.Grid_Occupied"
        xmlns:grid_maintenance="clr-namespace:QuanLyBaiXe.Resource.Grid_Maintenance"
        mc:Ignorable="d"
        Title="Phần mềm quản lý bãi xe" 
        Width="1920"
    Height="1081"
        Icon="Image/icon.png"
        x:Name="mainwindow"
        WindowStartupLocation="CenterScreen" Background="#FFF0F0F0">

    <Window.Effect>
        <DropShadowEffect
            Color="#FFD6D6D6"
            BlurRadius="20"
            RenderingBias="Quality" />
    </Window.Effect>

    <Window.Resources>
        <Style x:Key="itemHeaderStyle" TargetType="Grid">
            <Setter Property="Width" Value="180" />
            <Setter Property="Height" Value="35" />
            <Setter Property="Margin" Value="5 0 0 0" />
        </Style>
    </Window.Resources>

    <!--Bắt đầu giao diện-->
    <Grid>
        <TabControl
            Margin="0"
            BorderThickness="1,0,1,1"
            Padding="1" Foreground="White" Background="#FF7A00E0">

            <!--TabControl Style-->
            <TabControl.Resources>
                <Style x:Name="textblock" TargetType="TextBlock" x:Key="mainTabControlTextBlock">
                    <Setter Property="Foreground" Value="#FFAE00FF"></Setter>
                    <Setter Property="FontSize" Value="20"></Setter>
                    <Setter Property="Margin" Value="15 0 0 0"></Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSelected,
                        RelativeSource={RelativeSource AncestorType=TabItem}}" 
                            Value="True">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="materialDesign:PackIcon" x:Key="mainTabControlPackIcon">
                    <Setter Property="Height" Value="20"></Setter>
                    <Setter Property="Width" Value="18"></Setter>
                    <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                    <Setter Property="Foreground" Value="#FFAE00FF"></Setter>
                    <Setter Property="Margin" Value="-5 0 0 0"></Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSelected,
                        RelativeSource={RelativeSource AncestorType=TabItem}}" 
                            Value="True">
                            <Setter Property="Foreground" Value="White"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>


                <Style TargetType="TabItem" x:Key="TabControlStyle">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid Name="Panel">
                                    <Border x:Name="Border1" BorderBrush="#FFBDBDBD" Margin="0,0,0,-1" BorderThickness="0" CornerRadius="8 8 0 0">
                                        <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>

                                    </Border>
                                    <Grid.Height>60</Grid.Height>
                                    <Grid.Width>200</Grid.Width>


                                </Grid>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border1" Property="Background" Value="#FF7A00E0" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Panel" Property="Background" Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabControl.BorderBrush>
                <ImageBrush/>
            </TabControl.BorderBrush>

            <!--MAN HINH CHINH-->
            <TabItem x:Name="TabControl" Style="{StaticResource TabControlStyle}" BorderBrush="Black" Margin="0" IsSelected="True" UseLayoutRounding="False">
