                                        VerticalAlignment="Top"
                                        FontSize="25"
                                        Foreground="White"
                                        Text="6" />
                                </Grid>
                                <!--Row 3 - Col 0 slot-->
                                <Grid
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Name="pos7">
                                    <MyResource:gridBooked x:Name="pos7gridBooked" Visibility="{Binding  parkingLayout[6].IsBooked,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
                                    <MyResource2:gridOccupied x:Name="pos7gridOcupied" Visibility="{Binding  parkingLayout[6].IsOccupied,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
                                    <MyResource1:gridAvailable x:Name="pos7gridAvailable" Visibility="{Binding  parkingLayout[6].IsAvailable,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
                                    <grid_maintenance:gridMaintenance x:Name="pos7gridMaintenance" Visibility="{Binding  parkingLayout[6].IsMaintenance,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
                                    <TextBlock
                                        Margin="10 0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        FontSize="25"
                                        Foreground="White"
                                        Text="7" />
                                </Grid>
                                <!--Row 3 - Col 1 slot-->
                                <Grid
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Name="pos8">
                                    <MyResource:gridBooked x:Name="pos8gridBooked" Visibility="{Binding  parkingLayout[7].IsBooked,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
                                    <MyResource2:gridOccupied x:Name="pos8gridOcupied" Visibility="{Binding  parkingLayout[7].IsOccupied,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
                                    <MyResource1:gridAvailable x:Name="pos8gridAvailable" Visibility="{Binding  parkingLayout[7].IsAvailable,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
                                    <grid_maintenance:gridMaintenance x:Name="pos8gridMaintenance" Visibility="{Binding  parkingLayout[7].IsMaintenance,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
                                    <TextBlock
                                        Margin="10 0"
