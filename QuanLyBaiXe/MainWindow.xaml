                    </Border>
                    <!--CAR COUNTER-->
                    <Grid
                        Grid.Row="0"
                        Grid.Column="1">

                        <Border
                            Margin="0 5 5 5"
                            Background="White"
                            BorderBrush="White"
                            BorderThickness="0"
                            CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect
                                    Color="#FFC1C1C1"
                                    BlurRadius="20"
                                    RenderingBias="Quality"
                                    ShadowDepth="5" />
                            </Border.Effect>
                            <DockPanel>
                                <TextBlock
                                    Margin="40 10 0 0"
                                    DockPanel.Dock="Top"
                                    FontSize="40"
                                    Foreground="#FF5D00FF"
                                    Text="Thống kê hiện tại">
                                    <!--<TextBlock.Effect>
                                        <DropShadowEffect Color="#FFC5C5C5" RenderingBias="Quality" BlurRadius="30" ShadowDepth="2"/>
                                    </TextBlock.Effect>-->
                                </TextBlock>
                                <UniformGrid
                                    
                                    Columns="2"
                                    Rows="2">
                                    <!--DataContext="{StaticResource PositionVM}"-->
                                    
                                    <DockPanel Margin="0">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            DockPanel.Dock="Bottom"
                                            FontSize="14"
                                            Text="Còn trống" />
                                        <lvc:Gauge
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="5"
                                            Value="{Binding PositionStatus.Available}"
                                            From="0"
                                            FromColor="#FF5DB854"
                                            To="12"
                                            ToColor="#FF0E6A00"
                                            Uses360Mode="True">
                                            <lvc:Gauge.GaugeRenderTransform>
                                                <TransformGroup>
                                                    <RotateTransform Angle="90" />
                                                    <ScaleTransform ScaleX="-1" />
                                                </TransformGroup>
                                            </lvc:Gauge.GaugeRenderTransform>
                                        </lvc:Gauge>
                                    </DockPanel>
                                    <DockPanel Margin="0">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            DockPanel.Dock="Bottom"
                                            FontSize="14"
                                            Text="Đã đặt" />
                                        <lvc:Gauge
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="5"
                                            Value="{Binding PositionStatus.Booked}"
                                            From="0"
                                            FromColor="#FFFFB56C"
                                            To="12"
                                            ToColor="#FFE47200"
                                            Uses360Mode="True">
                                            <lvc:Gauge.GaugeRenderTransform>
                                                <TransformGroup>
                                                    <RotateTransform Angle="90" />
                                                    <ScaleTransform ScaleX="-1" />
                                                </TransformGroup>
                                            </lvc:Gauge.GaugeRenderTransform>
                                        </lvc:Gauge>
                                    </DockPanel>
                                    <DockPanel Margin="0">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            DockPanel.Dock="Bottom"
                                            FontSize="14"
                                            Text="Đang có xe" />
                                        <lvc:Gauge
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="5"
                                            Value="{Binding PositionStatus.Occupied}"
                                            From="0"
                                            FromColor="#FFFF7070"
                                            To="12"
                                            ToColor="Red"
                                            Uses360Mode="True">
                                            <lvc:Gauge.GaugeRenderTransform>
                                                <TransformGroup>
                                                    <RotateTransform Angle="90" />
                                                    <ScaleTransform ScaleX="-1" />
                                                </TransformGroup>
                                            </lvc:Gauge.GaugeRenderTransform>
                                        </lvc:Gauge>
                                    </DockPanel>
                                    <DockPanel Margin="0">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            DockPanel.Dock="Bottom"
                                            FontSize="14"
                                            Text="Đang bảo trì" />
                                        <lvc:Gauge
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="5"
                                            Value="{Binding PositionStatus.Maintenance}"
                                            FontSize="20"
                                            From="0"
                                            FromColor="#FF9E9E9E"
                                            To="12"
                                            ToColor="#FF5D5D5D"
                                            Uses360Mode="True">
