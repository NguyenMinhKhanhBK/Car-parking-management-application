                                        VerticalAlignment="Top"
                                        FontSize="25"
                                        Foreground="White"
                                        Text="8" />
                                </Grid>
                                <!--Row 4 - Col 0 slot-->
                                <Grid
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Name="pos9">
                                    <MyResource:gridBooked x:Name="pos9gridBooked" Visibility="{Binding  parkingLayout[8].IsBooked,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
                                    <MyResource2:gridOccupied x:Name="pos9gridOcupied" Visibility="{Binding  parkingLayout[8].IsOccupied,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
