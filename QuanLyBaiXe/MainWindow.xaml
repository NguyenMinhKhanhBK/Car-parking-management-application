                                <!--Row 4 - Col 1 slot-->
                                <Grid
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Name="pos10">
                                    <MyResource:gridBooked x:Name="pos10gridBooked" Visibility="{Binding  parkingLayout[9].IsBooked,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
                                    <MyResource2:gridOccupied x:Name="pos10gridOcupied" Visibility="{Binding  parkingLayout[9].IsOccupied,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
