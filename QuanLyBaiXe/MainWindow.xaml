                                <Grid.Effect>
                                    <DropShadowEffect
                                        Color="#FFB9B9B9"
                                        BlurRadius="20"
                                        RenderingBias="Quality" />
                                </Grid.Effect>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>
                                <!--Row 0 - Col 0 slot-->
                                <Grid
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Name="pos1">
                                    <MyResource:gridBooked x:Name="pos1gridBooked" Visibility="{Binding Path=parkingLayout[0].IsBooked,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
                                    <MyResource1:gridAvailable x:Name="pos1gridAvailable" Visibility="{Binding  Path=parkingLayout[0].IsAvailable,Converter={StaticResource BoolToVisConverter}, Source={StaticResource MainVM}}" />
                                    <MyResource2:gridOccupied x:Name="pos1gridOcupied" Visibility="{Binding  Path=parkingLayout[0].IsOccupied,Converter={StaticResource BoolToVisConverter}, Source={StaticResource MainVM}}" />
                                    <grid_maintenance:gridMaintenance x:Name="pos1gridMaintenance" Visibility="{Binding  Path=parkingLayout[0].IsMaintenance,Converter={StaticResource BoolToVisConverter} , Source={StaticResource MainVM}}" />
                                    <TextBlock
                                        Margin="10 0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        FontSize="25"
                                        Foreground="White"
                                        Text="1" />
                                </Grid>
                                <!--Row 0 - Col 1 slot-->
