                                    <MyResource2:gridOccupied x:Name="pos2gridOcupied" Visibility="{Binding  parkingLayout[1].IsOccupied,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
                                    <grid_maintenance:gridMaintenance x:Name="pos2gridMaintenance" Visibility="{Binding  parkingLayout[1].IsMaintenance,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
                                    <TextBlock
