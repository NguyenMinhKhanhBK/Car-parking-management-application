                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Name="pos11">
                                    <MyResource:gridBooked x:Name="pos11gridBooked" Visibility="{Binding  parkingLayout[10].IsBooked,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
                                    <MyResource2:gridOccupied x:Name="pos11gridOcupied" Visibility="{Binding  parkingLayout[10].IsOccupied,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
                                    <MyResource1:gridAvailable x:Name="pos11gridAvailable" Visibility="{Binding  parkingLayout[10].IsAvailable,Converter={StaticResource BoolToVisConverter},Source={StaticResource MainVM}}" />
