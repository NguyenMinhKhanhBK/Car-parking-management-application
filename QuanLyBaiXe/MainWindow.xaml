                        <materialDesign:PackIcon
                            Style="{StaticResource mainTabControlPackIcon}"
                            Kind="HomeOutline"   />
                        <TextBlock
                            Style="{StaticResource mainTabControlTextBlock}"
                            Text="Màn hình chính">
                        </TextBlock>
                    </Grid>
                </TabItem.Header>
